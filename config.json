{
  "name": "WhatsApp消息处理技能",
  "id": "whatsapp-message-handler",
  "version": "1.0.0",
  "description": "专门处理WhatsApp多模块消息的接收和响应系统，支持文本、图片、文件等多种消息类型的处理",
  "enabled": true,
  "dependencies": [
    "node.js",
    "express",
    "axios"
  ],
  "settings": {
    "connectionTimeout": 30000,
    "maxMessageSize": 16777216,
    "supportedMediaTypes": [
      "image",
      "document",
      "audio",
      "video",
      "location",
      "contact"
    ],
    "messageProcessing": {
      "enableParsing": true,
      "enableRouting": true,
      "enableAutoReply": true,
      "enableHistory": true
    },
    "security": {
      "enableContentFilter": true,
      "allowedDomains": [
        "*.whatsapp.net",
        "*.facebook.com"
      ],
      "blockedExtensions": [
        ".exe",
        ".bat",
        ".scr",
        ".com"
      ]
    }
  },
  "endpoints": {
    "webhook": "/webhook/whatsapp",
    "status": "/status/whatsapp",
    "health": "/health/whatsapp"
  },
  "permissions": [
    "messages:read",
    "messages:send",
    "media:upload",
    "contacts:read"
  ],
  "metadata": {
    "category": "communication",
    "complexity": "medium",
    "estimatedTime": "10 minutes",
    "tags": [
      "whatsapp",
      "messaging",
      "automation",
      "integration"
    ]
  }
}